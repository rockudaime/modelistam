			$(document).ready(function() {
 
				var owl = $("#owl-alike-products");
				
				owl.owlCarousel({
				    loop:true,
				    margin:10,
				    navigationText: false,
				    responsiveClass:true,
				    responsive:{
				    	0:{
				    		items:1,
				    		nav:true
				    	},
				        460:{
