	section.profile-delivery-cabinet
		h1 Доставка и оплата
		form.d-delivery-form(name="delivery-method" action="/" method="POST")
			// Секция с новой почтой

			section.d-main-delivery
				.d-main-delivery__logo
					img(src="dist/images/personal-cabinet/logo-new-post.png", alt="логотип Новой Почты", width="51")
				.d-main-delivery__content
					h3.d-main-delivery__title Новая почта
					a.d-delivery-item__payment-details-link(href="#") Условия доставки
					div
						section.d-main-delivery__address
							.form-group
								select.custom-select
									option(value="kiyv") Киев
									option(value="kharkov") Харьков
									option(value="lviv") Львов
									option(value="odessa") Одесса
									option(value="dnepr") Днепр
							.form-group
								select.custom-select
									- for (var x=0; x<20; x++)
										option(value=x) адресс новой почты #{x}
						section.d-main-delivery__payment
							header.d-delivery-item__header
								h3.d-delivery-item__title Способ оплаты
								a.d-delivery-item__payment-details-link(href="#") Условия оплаты
							.form-group
								select.custom-select
									option(value="0") При получении
									option(value="1") Предоплата
									option(value="2") Кредит
						input.custom-checkbox#new-post-main(type="checkbox" checked name="main-delivery")
						label.custom-checkbox__label.d-main-delivery__checkbox(for="new-post-main")
							span.custom-checkbox__box
