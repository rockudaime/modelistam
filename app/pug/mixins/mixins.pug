mixin category-product-status(status)
	case status
		when 'available'
			span.cp-status.cp-status--available В наличии
		when 'incart'
			span.cp-status.cp-status--available В наличии
		when 'new'
			span.product-status.product-status--new Новинка
		when 'discount'
			span.product-status.product-status--discount -10%
		when 'top'
			span.product-status.product-status--top Топ продаж
		when 'sale'
			span.product-status.product-status--sale Акция
		when 'noavail'
			span.cp-status.cp-status--noavail Нет наличии
		when 'to-order'
			span.cp-status.cp-status--to-order Под заказ
		when 'waiting'
			span.cp-status.cp-status--waiting Ожидается

mixin category-product-button(status)
	case status
		when 'to-order'
			a.product-btn.category-product__btn.category-product__btn--pre-order(href="#") Заказать
		when 'waiting'
			a.product-btn.category-product__btn.category-product__btn--waiting(href="#") Сообщить о поступлении
		when 'noavail'
			a.product-btn.category-product__btn.category-product__btn--buy-noavail(href="#") Купить
		when 'incart'
			a.product-btn.category-product__btn.category-product__btn--incart(href="#") В корзине
		default
			a.product-btn.category-product__btn.category-product__btn--buy(href="#") Купить



mixin category-product(imageSrc, status, title, description, price, priceNew)
