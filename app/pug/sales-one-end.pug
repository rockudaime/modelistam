doctype html
html(lang="ru")
	head
		title Новогодние скидки на квадрокоптеры DJI и бесплатная доставка
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
		meta(http-equiv="x-ua-compatible" content="ie=edge")
		//- link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.5/assets/owl.carousel.min.css")
		link(rel="stylesheet" href="dist/normalize.css")
		link(rel="stylesheet" href="dist/template_styles.css")
		
		script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js")
		//- script(src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.5/owl.carousel.min.js")
		script(src="dist/js/vendor/owl.carousel.js")
		script(src="dist/js/vendor/modernizr-2.8.3.min.js")
	
		// main script
		script(src="dist/js/base/all.js")
		script(src="dist/js/vendor/countdown/jquery.countdown.js")
		script(src="dist/js/pages/sales.js")

	body
		include includes/header.pug
		include mixins/mixins.pug
		.container
			// ХЛЕБНЫЕ КРОШКИ
			section.breadcrumbs
				a(href="#").breadcrumbs-item.breadcrumbs-menu-btn.btn Каталог
				a(href="#").breadcrumbs-item
					span.bb-solid Главная
				span Акции
			include includes/main-nav.pug
		.container
			h1.pagetitle.sale-pagetitle Новогодние скидки на квадрокоптеры DJI и бесплатная доставка
			block sales-header
				header.sale-info.clearfix
					.sale-info__banner
						img(src='dist/images/temporary/sale-one.jpg')
					.sale-info__period.clearfix
						.sale-info__period-text Акция завершена
						.sale-info__period-text Акция действовала с 28 февраля по 1 апреля
		.container
			main.main-content.sale-end-content.clearfix
				header.category-content__header.clearfix
					.fl_l
						h2.fl_l.category-content__header-title Акционные товары
						a.category-content__header-anchor.mobile-hidden(href='#sale-more-info')
							span.bb-dashed Подробнее об акции

					.share-links.mobile-hidden.fl_r
						span Отправить
						a(href="#" target="_blank").share-icon.share-icon__mail
