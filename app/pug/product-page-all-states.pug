doctype html
html(lang="ru")
	head
		block title
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(http-equiv="x-ua-compatible" content="ie=edge")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.5/assets/owl.carousel.min.css")
		link(rel="stylesheet" href="dist/normalize.css")
		link(rel="stylesheet" href="dist/template_styles.css")
		
		script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.5/owl.carousel.min.js")
		script(src="dist/js/vendor/modernizr-2.8.3.min.js")
		script(src="dist/js/pages/product.js")
		// add fancybox
		link(rel="stylesheet", href="dist/css/fancybox/jquery.fancybox.css?v=2.1.5")
		script(src="dist/js/vendor/fancybox/jquery.fancybox.js?v=2.1.5")
		link(rel="stylesheet", href="dist/css/fancybox/helpers/jquery.fancybox-thumbs.css?v=1.0.7")
		script(src="dist/js/vendor/fancybox/helpers/jquery.fancybox-thumbs.js?v=1.0.7")
		

	body
		.page-inner
			section.product-card
				.product-card__buy-block.product-info
					.product-feature.product-feature--best-price Гарантия лучшей цены
					.product-feature.product-feature--order Товар под заказ
					.product-feature.product-feature--sale Осталось: 5 ч : 20 мин : 11 сек
					div.product-group
						span.product-info__status.product-info__status--not-available Нет в наличии
					div.product-group
						span.product-info__status.product-info__status--available Есть в наличии
					div.product-group
						span.product-info__status.product-info__status--waiting Ожидается

					form(name="orderForm")
						input.product-btn.product-btn--buy(type="submit" value="Купить" role="button")
						br
						br
						input.product-btn.product-btn--order(type="submit" value="Заказать" role="button")
						br
						br
						input.product-btn.product-btn--inform(type="submit" value="Сообщить о поступлении" role="button")
						br
						br
						input.product-btn.product-btn--reserve(type="submit" value="Зарезервировать" role="button")